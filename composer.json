{
    "name":         "irs/behat-uimap-extension",
    "description":  "Behat's extension allows to use Magento TAF uimap files in features.",
    "keywords":     ["Magento", "Behat", "TAF", "uimap"],
    "type":         "library",
    "license":      "MIT",

    "authors": [
        {
            "name":   "Vadim Kusakin",
            "email":  "vadim.irbis@gmail.com"
        }
    ],

    "require": {
        "php":          ">=7",
        "behat/behat":  "^3.4",
        "behat/mink":   "^1.5",
        "zendframework/zend-cache": "2.1.*@dev"
    },

    "require-dev": {
        "phpunit/phpunit": "^4",
        "mikey179/vfsstream": "1.2.*"
    },

    "autoload": {
        "psr-0": {"Irs\\BehatUimapExtension": "src/"}
    }
}